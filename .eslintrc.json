{
    "extends": "eslint:recommended",
    
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
      },
    
    "parserOptions": {
        "ecmaVersion": 6
    },

    "rules": {
        "indent": "off",
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "no-extra-semi": "off",
        "no-console": "off"
    }
}